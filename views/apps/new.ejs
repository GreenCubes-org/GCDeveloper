<% title = 'Регистрация нового приложения &mdash; GreenCubes Developer' %>

<header class="gc registerapp header">Регистрация нового приложения</header>
<p style="font-size: 1.6rem">С помощью данной формы вы можете зарегистрировать приложение в системе.</p>
<div class="ui segment">
	<form id="gc-newform">
		<div class="ui form">
			<div class="ui error message">
				<div class="header">Ошибка!</div>
				<p id="errormessage"></p>
			</div>
			<div class="field">
				<label>Владелец</label>
				<input placeholder="Kernel" type="text" name="owner" value="<%= req.user.username %>">
			</div>
			<div class="field">
				<label>Название приложения</label>
				<input placeholder="42GC" type="text" name="name">
			</div>
			<div class="field">
				<label>Краткое описание</label>
				<input placeholder="Сокращалка ссылок" type="text" name="description">
			</div>
			<div class="field">
				<label>Домашняя страница</label>
				<input placeholder="http://42gc.ru" type="text" name="homeURI">
			</div>
			<div class="field">
				<label>Callback (redirectURI)</label>
				<input placeholder="http://42gc.ru/oauth2/callback" type="text" name="redirectURI">
			</div>
			<div class="grouped fields">
				<label>Права доступа</label>
				<div class="field">
					<div class="ui checkbox checked">
						<input name="all" type="checkbox">
						<label>Все</label>
					</div>
				</div>
				<div class="field">
					<div class="ui checkbox checked">
						<input name="profile" type="checkbox">
						<label>Профиль</label>
					</div>
				</div>
				<div class="field">
					<div class="ui checkbox">
						<input name="email" type="checkbox">
						<label>Электронная почта</label>
					</div>
				</div>
				<div class="field">
					<div class="ui checkbox">
						<input name="regions" type="checkbox">
						<label>Список регионов</label>
					</div>
				</div>
			</div>
			<div class="ui bottom attached segment">
				<div class="grouped fields">
					<label for="alone">Служебное приложение</label>
					<div class="field">
						<div class="ui radio checkbox checked">
							<input name="internal" type="radio" value="true">
							<label>Да</label>
						</div>
					</div>
					<div class="field">
						<div class="ui radio checkbox">
							<input name="internal" type="radio" value="false">
							<label>Нет</label>
						</div>
					</div>
				</div>
			</div>
			<div class="ui primary big button" id="gc-newbutton">Отправить</div>
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		</div>
	</form>
</div>
